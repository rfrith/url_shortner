<p id="notice"><%= notice %></p>

<h1>Listing Short Urls</h1>

<table>
  <thead>
    <tr>
      <th colspan="1">Original URL</th>
      <th colspan="1">Shortened URL</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @short_urls.each do |short_url| %>
      <tr>
        <td><%= short_url.long %></td>
        <td><%= short_url.short %></td>
        <td><%= link_to 'Show', short_url %></td>
        <td><% link_to 'Edit', edit_short_url_path(short_url) %></td>
        <td><%= link_to 'Destroy', short_url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag(short_urls_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search For URL" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<br>

<%= link_to 'Create New Shortened URL', new_short_url_path %>
