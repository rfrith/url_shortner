<%= form_for(@short_url) do |f| %>
  <% if @short_url.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@short_url.errors.count, "error") %> prohibited this short_url from being saved:</h2>

      <ul>
        <% @short_url.errors.messages.values.each do |message| %>
          <% message.each do  |m| %>
            <li><%= m %></li>
          <% end %>
        <% end %>
      </ul>

    </div>
  <% end %>

  <div class="field">
    <%= f.label "URL To Shorten" %>
    <%= f.text_field :long, :size => "50" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Save Short URL", class: "btn btn-default" %> <%= link_to "Cancel", short_urls_path, class: "btn btn-default" %>
  </div>
<% end %>
